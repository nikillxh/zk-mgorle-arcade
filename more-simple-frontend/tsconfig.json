{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/pages/Home.jsx", "src/pages/GameTileville.jsx", "src/pages/GameNGuess.jsx", "src/pages/GameLottery.jsx", "src/pages/GameDetails.jsx", "src/pages/GameChess.jsx", "src/pages/GameCheckers.jsx", "src/pages/NotFound.jsx", "src/routes/Router.jsx"],
  "exclude": ["node_modules"]
}
